{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Python: NCM 解密",
        "type": "debugpy",
        "request": "launch",
        "program": "${workspaceFolder}/ncm_decrypt.py",
        "console": "integratedTerminal",
        "args": [
          "-s", ".",       // 输入文件夹（可以改）
          "-t", ".",       // 输出文件夹（可以改）
          "--embed-meta",          // 是否嵌入元信息（可选）
          "-w", "4",               // 使用 4 个进程
          "-v"                     // 显示详细日志
        ]
      }
    ]
  }
  